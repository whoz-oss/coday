{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "affected": {
    "defaultBase": "master"
  },
  "targetDefaults": {
    "build": {
      "cache": false
    },
    "@nx/esbuild:esbuild": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["default", "^default"]
    },
    "nx-release-publish": {
      "dependsOn": ["server:build"],
      "options": {
        "packageRoot": "apps/server/dist"
      }
    },
    "lint": {
      "cache": true
    },
    "test": {
      "cache": true,
      "options": {
        "passWithNoTests": true
      }
    },
    "@angular/build:application": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["default", "^default"]
    },
    "@nx/jest:jest": {
      "cache": true,
      "inputs": ["default", "^default", "{workspaceRoot}/jest.preset.cjs"],
      "options": {
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "defaultBase": "master",
  "useDaemonProcess": true,
  "plugins": [
    {
      "plugin": "@nx/jest/plugin",
      "options": {
        "targetName": "test"
      }
    },
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "lint"
      }
    },
    {
      "plugin": "@nx/playwright/plugin",
      "options": {
        "targetName": "e2e"
      }
    }
  ],
  "release": {
    "projects": ["server", "client"],
    "releaseTagPattern": "release/{version}",
    "git": {
      "commitMessage": "chore(release): {version}",
      "tag": true
    },
    "changelog": {
      "workspaceChangelog": {
        "file": "CHANGELOG.md",
        "createRelease": "github"
      }
    },
    "version": {
      "preVersionCommand": "nx run server:build",
      "preserveLocalDependencyProtocols": false,

      "manifestRootsToUpdate": ["apps/{projectName}"],
      "conventionalCommits": true
    }
  },
  "tui": {
    "enabled": false
  },
  "generators": {
    "@nx/angular:application": {
      "e2eTestRunner": "playwright",
      "linter": "eslint",
      "style": "scss",
      "unitTestRunner": "jest"
    }
  }
}
