{
  "name": "agentos-sdk",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "agentos/agentos-sdk/src",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "cache": true,
      "inputs": [
        "default",
        "{projectRoot}/build.gradle.kts",
        "{workspaceRoot}/agentos/gradle.properties",
        "{workspaceRoot}/agentos/settings.gradle.kts"
      ],
      "outputs": ["{projectRoot}/build"],
      "options": {
        "command": "bash scripts/gradle-self-healing.sh agentos-sdk build",
        "cwd": "agentos"
      }
    },
    "build:direct": {
      "executor": "nx:run-commands",
      "cache": false,
      "options": {
        "command": "./gradlew :agentos-sdk:build",
        "cwd": "agentos"
      },
      "metadata": {
        "description": "Run build directly without self-healing (for debugging)"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "cache": true,
      "inputs": [
        "default",
        "{projectRoot}/build.gradle.kts",
        "{workspaceRoot}/agentos/gradle.properties",
        "{workspaceRoot}/agentos/settings.gradle.kts"
      ],
      "outputs": ["{projectRoot}/build/test-results", "{projectRoot}/build/reports"],
      "options": {
        "command": "bash scripts/gradle-self-healing.sh agentos-sdk test",
        "cwd": "agentos",
        "passWithNoTests": null
      }
    },
    "test:direct": {
      "executor": "nx:run-commands",
      "cache": false,
      "options": {
        "command": "./gradlew :agentos-sdk:test",
        "cwd": "agentos"
      },
      "metadata": {
        "description": "Run tests directly without self-healing (for debugging)"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "cache": false,
      "options": {
        "command": "./gradlew :agentos-sdk:publish",
        "cwd": "agentos"
      },
      "dependsOn": ["build"]
    }
  },
  "tags": ["type:lib", "platform:jvm", "scope:sdk"]
}
