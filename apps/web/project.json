{
  "name": "web",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "tags": [
    "web-server",
    "depends:web-ng"
  ],
  "targets": {
    "build:server": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "assets": [],
        "esbuildOptions": {
          "outExtension": {
            ".js": ".js"
          },
          "sourcemap": true
        },
        "external": [
          "sharp"
        ],
        "format": [
          "cjs"
        ],
        "main": "apps/web/server/server.ts",
        "outputFileName": "server.js",
        "outputPath": "dist/web/server",
        "platform": "node",
        "thirdParty": true,
        "tsConfig": "apps/web/server/tsconfig.app.json"
      },
      "configurations": {
        "watch": {
          "watch": true
        }
      }
    },
    "build:client": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "web-ng:build"
      ],
      "options": {
        "commands": [
          "echo 'Copying Angular client from web-ng build...'",
          "rm -rf dist/web/client",
          "mkdir -p dist/web/client",
          "rsync -av dist/apps/web-ng/browser/ dist/web/client/",
          "echo 'Client copy completed.'"
        ]
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "web:build:server",
        "web:build:client"
      ],
      "options": {
        "commands": [
          "echo 'Finalizing web application build...'",
          "rm -f dist/web/package.json",
          "mv dist/web/server/package.json dist/web",
          "cp apps/web/bin.js dist/web/bin.js",
          "echo 'Web application build completed.'"
        ]
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "dependsOn": ["web:build"],
      "options": {
        "commands": ["node dist/web/server/server.js --no_auth"]
      }
    },
    "serve:watch": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run web:build:server:watch",
          "nodemon --watch 'dist/web/**/*.*' --verbose --inspect-brk=9229 dist/web/server/server.js --no_auth"
        ]
      }
    }
  }
}
