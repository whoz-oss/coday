{
  "name": "web",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/web/src",
  "tags": ["web-server"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": [
        {
          "projects": "web-ng",
          "target": "build"
        },
        {
          "target": "build-server"
        }
      ],
      "outputs": ["{projectRoot}/dist/web"],
      "options": {
        "commands": [
          "cp -r apps/web-ng/dist/browser apps/web/dist/client",
          "cp apps/web/package.json apps/web/dist/package.json",
          "cp apps/web/bin.js apps/web/dist/bin.js"
        ],
        "parallel": false
      }
    },
    "build-server": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "assets": [],
        "bundle": true,
        "minify": true,
        "esbuildOptions": {
          "outExtension": {
            ".js": ".js"
          },
          "sourcemap": false,
          "banner": {
            "js": "import { createRequire as __createRequire } from 'module';import { dirname as __dirname_func } from 'path';const require = __createRequire(import.meta.url);const __filename = import.meta.url.slice(7);const __dirname = __dirname_func(__filename);"
          }
        },
        "external": ["sharp"],
        "format": ["esm"],
        "main": "apps/web/src/server.ts",
        "outputFileName": "server.js",
        "outputPath": "{projectRoot}/dist",
        "platform": "node",
        "thirdParty": true,
        "tsConfig": "apps/web/tsconfig.app.json"
      }
    },
    "serve:production": {
      "executor": "nx:run-commands",
      "dependsOn": ["web:build"],
      "options": {
        "commands": ["node apps/web/dist/bin.js --no_auth"],
        "parallel": false
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "dependsOn": ["web-ng:serve"],
      "options": {
        "env": {
          "BUILD_ENV": "development"
        },
        "commands": ["tsx watch apps/web/src/server.ts --no_auth"]
      }
    }
  }
}
