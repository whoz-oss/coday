{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["ESNext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@coday/agent": ["libs/agent/src/index.ts"],
      "@coday/ai-thread": ["libs/ai-thread/src/index.ts"],
      "@coday/ai/*": ["libs/ai/*"],
      "@coday/basecamp/*": ["libs/basecamp/*"],
      "@coday/coday-services": ["libs/coday-services/src/index.ts"],
      "@coday/config/*": ["libs/config/*"],
      "@coday/confluence/*": ["libs/confluence/*"],
      "@coday/core": ["libs/core/src/index.ts"],
      "@coday/file/*": ["libs/file/*"],
      "@coday/function/*": ["libs/function/src/lib/*"],
      "@coday/git/*": ["libs/git/*"],
      "@coday/gitlab/*": ["libs/gitlab/*"],
      "@coday/handler": ["libs/handler/src/index.ts"],
      "@coday/handlers/*": ["libs/handlers/*"],
      "@coday/handlers/config": ["libs/handlers/config/src/index.ts"],
      "@coday/handlers/load": ["libs/handlers/load/src/index.ts"],
      "@coday/handlers/looper": ["libs/handlers/looper/src/index.ts"],
      "@coday/handlers/memory": ["libs/handlers/memory/src/index.ts"],
      "@coday/handlers/openai": ["libs/handlers/openai/src/index.ts"],
      "@coday/handlers/stats": ["libs/handlers/stats/src/index.ts"],
      "@coday/integration/*": ["libs/integration/src/lib/*"],
      "@coday/integrations/*": ["libs/integrations/*"],
      "@coday/integrations/ai": ["libs/integrations/ai/src/index.ts"],
      "@coday/integrations/basecamp": ["libs/integrations/basecamp/src/index.ts"],
      "@coday/integrations/confluence": ["libs/integrations/confluence/src/index.ts"],
      "@coday/integrations/file": ["libs/integrations/file/src/index.ts"],
      "@coday/integrations/git": ["libs/integrations/git/src/index.ts"],
      "@coday/integrations/gitlab": ["libs/integrations/gitlab/src/index.ts"],
      "@coday/integrations/jira": ["libs/integrations/jira/src/index.ts"],
      "@coday/integrations/mcp": ["libs/integrations/mcp/src/index.ts"],
      "@coday/integrations/slack": ["libs/integrations/slack/src/index.ts"],
      "@coday/integrations/zendesk-articles": ["libs/integrations/zendesk-articles/src/index.ts"],
      "@coday/jira/*": ["libs/jira/*"],
      "@coday/load/*": ["libs/load/*"],
      "@coday/mcp": ["libs/mcp/src/index.ts"],
      "@coday/memory/*": ["libs/memory/*"],
      "@coday/model/*": ["libs/model/src/lib/*"],
      "@coday/node_modules/*": ["libs/node_modules/*"],
      "@coday/openai/*": ["libs/openai/*"],
      "@coday/repository": ["libs/repository/src/index.ts"],
      "@coday/service/*": ["libs/service/src/lib/*"],
      "@coday/slack/*": ["libs/slack/*"],
      "@coday/src/*": ["libs/src/*"],
      "@coday/stats/*": ["libs/stats/*"],
      "@coday/utils/*": ["libs/utils/src/lib/*"],
      "@coday/zendesk-articles/*": ["libs/zendesk-articles/*"]
    },
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["node_modules", "tmp"]
}
